<div class="container">
  <div class="row">
     <div class="col-md-4">
      <h2>User info</h2>
   　　ここにユーザー情報入力
   　　
      <h2 class="mt-3">New book</h2>
          <%= form_with model:@book, local:true do |f| %>
     　　<div class="form-group">
      <label >Title</label>
      </br>
      <%= f.text_field :title %>
     </div>
     <div class="form-group">
      <label>Opinion</label>
     </br>
     <%= f.text_area :body %>
      </div>
    <div class="form-group">
     </br>
    <%= f.submit 'Create Book' %>

      <% end %>
    </div>
    </div>
   <div class="col-md-8">
      <table class="table book-index">
    <h2>Users</h2>
      <th>image</th>

      <th>name</th>
      <th colspan="3"></th>


     <% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag user, :profile_image, :fill, 5, 5, fallback: "no_image.jpg" %></td>
      <td><%= user.name %></td>
      <td><%= link_to "show", user_path(user.id) %></td>
    </tr>
      <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
