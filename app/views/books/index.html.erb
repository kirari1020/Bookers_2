<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-3">New book</h2>
          <%= form_with model:@book, local:true do |f| %>
     　　<div class="form-group">
      <label >Title</label>
      </br>
      <%= f.text_field :title %>
     </div>
     <div class="form-group">
      <label>Opinion</label>
     </br>
     <%= f.text_area :body %>
      </div>
    <div class="form-group">
     </br>
    <%= f.submit 'Create Book' %>

      <% end %>
    </div>
    </div>
   <div class="col-md-9">
      <table class="table book-index">
    <h2>Books</h2>
      <th></th>
      <th>Title</th>

      <th>Opinion</th>
      <th colspan="3"></th>


     <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag book.user, :profile_image, :fill, 5, 5, fallback: "no_image.jpg" %></td>
      <td><%= link_to book_path(book.id) do %>
            <span> <%= book.title %></span>
            <% end %></td>
      <td><%= book.body %></td>
    </tr>
      <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
